<p id="notice"><%= notice %></p>

<div class="subtitle">
  <p>ANIME</p>
  <p>MANGA</p>
  <p>LIST</p>
</div>

<div class="anime">
  <p>DEMON SLAYER（鬼滅の刃）</p>
</div>

<%= form_for(@dslayer) do |f| %>
  <% if @dslayer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dslayer.errors.count, "error") %> prohibited this dslayer from being saved:</h2>

      <ul>
      <% @dslayer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :DAY %>
    <%= f.text_field :day %>
  </div>
  <div class="field">
    <%= f.label :EPISODE %>
    <%= f.text_field :episode %>
  </div>
  <div class="field">
    <%= f.label :TITLE %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :MANGA %>
    <%= f.text_field :manga %>
  </div>
  <div class="btn1">
    <%= f.submit"ADD"%>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>DAY</th>
      <th>EPISODE</th>
      <th>TITLE</th>
      <th>MANGA</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dslayers.each do |dslayer| %>
      <tr>
        <td><%= dslayer.day %></td>
        <td><%= dslayer.episode %></td>
        <td><%= dslayer.title %></td>
        <td><%= dslayer.manga %></td>
        <td><%= link_to 'EDIT', dslayers_path(id: dslayer.id) %></td>
        <td><%= link_to 'DELET', dslayer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <a href="#" class="gotop">TOP</a>
  </tbody>
</table>


