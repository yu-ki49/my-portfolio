<p id="notice"><%= notice %></p>

<%= link_to 'Anilist', toppage_index_path %>

<h1>進撃の巨人</h1>

<%= form_for(@aot) do |f| %>
  <% if @aot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@aot.errors.count, "error") %> prohibited this aot from being saved:</h2>

      <ul>
      <% @aot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :放送日 %><br>
    <%= f.text_field :day %>
  </div>
  <div class="field">
    <%= f.label :話数 %><br>
    <%= f.text_field :episode %>
  </div>
  <div class="field">
    <%= f.label :タイトル %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :漫画 %><br>
    <%= f.text_field :manga %>
  </div>
  <div class="actions">
    <%= f.submit"追加する"%>
  </div>
<% end %>


<table>
  <thead>
    <tr>
      <th>放送日</th>
      <th>話数</th>
      <th>タイトル</th>
      <th>漫画</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @aots.each do |aot| %>
      <tr>
        <td><%= aot.day %></td>
        <td><%= aot.episode %></td>
        <td><%= aot.title %></td>
        <td><%= aot.manga %></td>
        <td><%= link_to 'Edit', aots_path(id: aot.id) %></td>
        <td><%= link_to 'Destroy', aot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Aot', aots_path %>
